        이름 : 
        <input id = "inputName" type = "text">
        학과 : 
        <input id = "inputMajor" type = "text">
        <button onclick="printInfo()">확인</button>
    </div>
    <script>
        function printInfo(){
            let inputName = document.getElementById('inputName').value;
            let inputMajor = document.getElementById('inputMajor').value;
            document.write("안녕하세요, 저는 " + inputMajor + " 재학 중인 " + inputName + "입니다.");
        }
    </script>
